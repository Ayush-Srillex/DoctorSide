<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:text="Log Out" />

        <TextView
            android:id="@+id/userType"
            android:layout_width="244dp"
            android:layout_height="53dp"
            android:layout_marginStart="62dp"
            android:text="Doctor"
            android:textSize="36sp"
            android:layout_marginLeft="62dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSpec"
                android:layout_width="118dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:text="Specialisation"
                android:textSize="18sp"
                android:layout_marginLeft="30dp" />

            <EditText
                android:id="@+id/spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="31dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="31dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Hospital"
                android:textSize="18sp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:id="@+id/hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textbaseCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="39dp"
                android:text="Base Charge"
                android:textSize="18sp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="39dp" />

            <EditText
                android:id="@+id/baseCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:inputType="number"
                android:layout_marginLeft="39dp"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <Button
            android:id="@+id/submitDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Submit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
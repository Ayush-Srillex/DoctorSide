<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hospital">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CloseSlot" />
        <activity android:name=".PatientDetails" />
        <activity android:name=".ViewPatients" />
        <activity android:name=".CreateSlot" />
        <activity android:name=".UpdateInfo" />
        <activity
            android:name=".Prescription"
            android:parentActivityName=".Drawer">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Drawer" />
        </activity>
        <activity android:name=".Drawer" />
        <activity
            android:name=".SignUp"
            android:parentActivityName=".StartPage">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartPage" />
        </activity>
        <activity android:name=".StartPage">

        </activity>
        <activity
            android:name=".LoginPage"
            android:parentActivityName=".StartPage">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartPage" />
        </activity>
        <activity
            android:name=".TypeSelection"
            android:parentActivityName=".LoginPage">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginPage" />
        </activity>
        <activity
            android:name=".DoctorRegister"
            android:parentActivityName=".StartPage">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartPage" />
        </activity>
    </application>

</manifest>